#!/usr/bin/env bash

if ! has nix_direnv_version || ! nix_direnv_version 3.1.0; then
  source_url "https://raw.githubusercontent.com/nix-community/nix-direnv/3.1.0/direnvrc" "sha256-yMJ2OVMzrFaDPn7q8nCBZFRYpL/f0RcHzhmw/i6btJM="
fi

nix_direnv_manual_reload

use flake .

# Optional: shared per-user env vars for all lattice worktrees
LATTICE_SHARED_ENVRC="$HOME/.lattice/.envrc"
if [[ -f "$LATTICE_SHARED_ENVRC" ]]; then
  # source_env() also calls watch_file(), so edits trigger direnv reloads.
  source_env "$LATTICE_SHARED_ENVRC"
fi
